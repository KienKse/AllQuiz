<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.app.kien.allquiz.MainActivity">

    <TextView
        android:layout_margin="@dimen/respBt_padd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/contQuestao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text1"
        android:textSize="20sp"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/questao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text2"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt1"
        android:padding="@dimen/respBt_padd"
        android:layout_marginTop="@dimen/respBt_first_margin"
        android:layout_width="@dimen/respBt_width"
        android:layout_height="@dimen/respBt_heigth" />

    <Button
        android:id="@+id/bt2"
        android:padding="@dimen/respBt_padd"
        android:layout_marginTop="@dimen/respBt_margin"
        android:layout_width="@dimen/respBt_width"
        android:layout_height="@dimen/respBt_heigth" />

    <Button
        android:id="@+id/bt3"
        android:padding="@dimen/respBt_padd"
        android:layout_marginTop="@dimen/respBt_margin"
        android:layout_width="@dimen/respBt_width"
        android:layout_height="@dimen/respBt_heigth" />


    <Button
        android:id="@+id/bt4"
        android:padding="@dimen/respBt_padd"
        android:layout_marginTop="@dimen/respBt_margin"
        android:layout_width="@dimen/respBt_width"
        android:layout_height="@dimen/respBt_heigth" />



</LinearLayout>
