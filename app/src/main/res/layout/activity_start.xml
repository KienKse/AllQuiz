<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.app.kien.allquiz.StartActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/app_name"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/Selecao_Quest"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="22sp"
        android:textStyle="bold" />


    <!--SÃ³ o perguntas Teste Clicavel-->
    <Button
        android:id="@+id/botao1"
        android:layout_width="@dimen/botaoStart_width"
        android:layout_height="@dimen/botaoStart_height"
        android:layout_marginTop="50dp"
        android:background="@drawable/redondo"
        android:onClick="startQuiz"
        android:text="@string/tipo_quest1" />

    <Button
        android:id="@+id/botao2"
        android:layout_width="@dimen/botaoStart_width"
        android:layout_height="@dimen/botaoStart_height"
        android:layout_marginTop="10dp"
        android:background="@drawable/redondo"
        android:onClick="startQuiz"
        android:text="@string/tipo_quest2" />

    <Button
        android:id="@+id/botao3"
        android:layout_width="@dimen/botaoStart_width"
        android:layout_height="@dimen/botaoStart_height"
        android:layout_marginTop="10dp"
        android:background="@drawable/redondo"
        android:onClick="startQuiz"
        android:text="@string/tipo_quest3" />

</LinearLayout>
